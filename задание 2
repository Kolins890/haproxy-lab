kolins@I5W10:~$ sudo cat /etc/haproxy/haproxy.cfg
global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 256

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    mode http
    default_backend http_back

backend http_back
    balance roundrobin
    server server1 127.0.0.1:8080 check weight 2
    server server2 127.0.0.1:8081 check weight 3
    server server3 127.0.0.1:8082 check weight 4

listen stats
    bind :9000
    mode http
    stats enable
    stats uri /
    stats auth admin:password

kolins@I5W10:~$
